<div id="patrociniosContent" class="row">
	{% if patrociniosPrincipales|length > 0 %}
	<div class="col-sm-3 patrocinioPrincipal">
		<div class="row">
			<div class="col-sm-12 title">Patrocinador principal</div>
		</div>
		{% for img in patrociniosPrincipales %}
		<div class="row">
			<div class="col-sm-12">
				<a href="{{ img['link'] }}" target="_blank"><img src="{{ asset(img['image']) }}" class="img-responsive"></a>
			</div>
		</div>
		{% endfor %}
	</div>
	{% endif %}
	{% if patrociniosSecundarios|length > 0 %}
	<div class="{{ (patrociniosPrincipales|length > 0)?'col-sm-6 col-sm-offset-3':'col-sm-8' }} patrocinios">
		<div class="row">
			<div class="col-sm-12 title">Patrocinadores</div>
		</div>	
		<div class="row list">
			{% for img in patrociniosSecundarios %}
			<div>
				<a href="{{ img['link'] }}" target="_blank"><img src="{{ asset(img['image']) }}" class="img-responsive"></a>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}
</div>