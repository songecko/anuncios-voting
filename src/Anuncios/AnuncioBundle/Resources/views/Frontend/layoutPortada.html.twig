<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}Votaci√≥n Anuncios.com{% endblock %}</title>
        <meta name="description" content="Votacion de anuncios.com">
        <meta name="viewport" content="width=device-width">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
		{# stylesheets... #}
        {% block stylesheets %}
        {% stylesheets output='css/portada.min.css' filter='cssrewrite'
            'bundles/anunciosanuncio/css/bootstrap.min.css'
            'bundles/anunciosanuncio/css/base.css'
            'bundles/anunciosanuncio/css/portada.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        {% endblock %}
    </head>
    <body class="portada">
    	<div class="container">
    		<div class="row">
    			<div class="col-md-4">
    				<img src="{{ asset('bundles/anunciosanuncio/images/trofeo.png') }}" class="trofeo img-responsive">
    			</div>
    		
    			<div id="content" class="col-md-8">
					{% block content %}
	        		{% endblock %}
	        	</div>
	        </div>
        </div>
        
		{# javascripts... #}
        {% block javascripts %}
        {% javascripts output='js/portada.min.js'
            '@AnunciosAnuncioBundle/Resources/assets/js/vendor/jquery-1.10.1.min.js'
            '@AnunciosAnuncioBundle/Resources/assets/js/vendor/bootstrap.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>