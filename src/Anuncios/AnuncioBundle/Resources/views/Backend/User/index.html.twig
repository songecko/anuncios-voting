{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'GeckoBackendBundle:Macros:misc.html.twig' import pagination %}
{% from 'AnunciosAnuncioBundle:Backend/User:macros.html.twig' import list  %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'gecko.backend.breadcrumb.user.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('anuncios_anuncio_backend_user_create'), 'gecko.backend.create'|trans) }} 
    </div>
    <h1><i class="icon-user"></i> {{ 'gecko.backend.user.index_header'|trans|raw }}</h1>
</div>

{% set criteria = app.request.query.get('criteria') %}
<form method="get" action="{{ path('anuncios_anuncio_backend_user_index') }}" class="form-inline form-filter">
	<div class="form-group">
		<label class="control-label" for="criteria_name">Es Jurado:</label>
		<select name="criteria[isJurado]">
			<option>Todos</option>
			<option value="1">Si</option>
			<option value="false">No</option>
		</select>
	</div>
	<div class="form-group">
	 	<label class="control-label" for="criteria_username">Nombre de Usuario:</label>
		<input type="text" id="criteria_username" name="criteria[username]" class="form-control">
	</div>
    <button type="submit" class="btn btn-primary"><i class="icon-search"></i> Buscar</button>
</form>

{#% render(url('sylius_backend_user_filter_form', {'criteria': app.request.query.get('criteria')})) %#}

{{ list(users)  }}
{{ pagination(users) }}

{% endblock %}