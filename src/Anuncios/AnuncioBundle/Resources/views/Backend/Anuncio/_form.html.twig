{{ form_errors(form) }}
<div class="row">
    <div class="col-md-6 row-split">
    	{{ form_row(form.campaign) }}
		<br>
    	{{ form_row(form.category) }}
		<br>
		{{ form_row(form.name) }}
		<br>
        {{ form_row(form.agency) }}
        <br>        
        {{ form_row(form.advertiser) }}
        <br>        
        {{ form_row(form.product) }}
        <br>
        {{ form_row(form.brand) }}
    </div>
        
     <div class="col-md-6">
    	{% if(form.vars.value.image) %}
    	<a href="{{ form.vars.value.image|imagine_filter('gecko_gallery') }}" target="_blank"><img class="img-polaroid" src="{{ form.vars.value.image|imagine_filter('gecko_image_90x60') }}" alt="" /></a>
    	{% endif %}
        {{ form_row(form.file) }}
    </div>
</div>
{{ form_rest(form) }}
