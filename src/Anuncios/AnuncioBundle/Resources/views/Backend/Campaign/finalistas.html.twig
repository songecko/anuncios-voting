{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% block topbar %}
<ol class="breadcrumb">
    <li><a href="{{ path('anuncios_anuncio_backend_campaign_index') }}">{{ 'gecko.backend.breadcrumb.campaign.index'|trans }}</a></li>
    <li>{{ 'gecko.backend.breadcrumb.finalistas'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<a href="{{ path('anuncios_anuncio_backend_campaign_update', {'id': campaign.id}) }}">{{ campaign.name }}</a></h3>
<div class="row">
	<div class="col-md-6">
		<h4>Finalistas popular</h4>
		<div class="marchaRanking">
		{% for usuario in finalistasUsuario %}
			{% if usuario != null %}
				<p><span class="categoryName">{{ usuario.category.name }}</span> - 
					{{ usuario.name }}
				</p>
			{% endif %}
		{% endfor %}
		</div>
	</div>
	
	<div class="col-md-6">
		<h4>Finalistas jurado</h4>
		<div class="marchaRanking">
		{% for jurado in finalistasJurado %}
			{% if jurado != null %}
				<p><span class="categoryName">{{ jurado.category.name }}</span> - 
					{{ jurado.name }}
				</p>
			{% endif %}
		{% endfor %}
		</div>
	</div>
</div>
{% endblock %}