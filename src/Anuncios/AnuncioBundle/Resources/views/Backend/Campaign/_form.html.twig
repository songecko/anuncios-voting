{{ form_errors(form) }}
<div class="row">
    <div class="col-md-6 row-split">
		{{ form_row(form.name) }}
		<br />
        {{ form_row(form.isActive) }}
        <br />
        {{ form_row(form.dateBegin) }}
        <br />
        {{ form_row(form.dateEnd) }}
    </div>
    
    <div class="col-md-6">
    <p style="font-weight: bold;">Anuncios</p>
    	<div style="float: left;">
        	{{ form_row(form.month) }}
        </div>
        <div>
        	{{ form_row(form.year) }}
        </div>
    </div>
</div>
{{ form_rest(form) }}
