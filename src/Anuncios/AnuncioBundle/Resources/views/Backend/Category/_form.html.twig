{{ form_errors(form) }}
<div class="row">
    <div class="col-md-6 row-split">
		{{ form_row(form.name) }}
    </div>
     <div class="col-md-6">
    	{% if(form.vars.value.path) %}
    	<a href="{{ form.vars.value.path|imagine_filter('gecko_gallery') }}" target="_blank"><img class="img-polaroid" src="{{ form.vars.value.path|imagine_filter('gecko_image_90x60') }}" alt="" /></a>
    	{% endif %}
        {{ form_row(form.headlineImageFile) }}
    </div>
</div>
{{ form_rest(form) }}
