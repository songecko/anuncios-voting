{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block content %}
<div class="page-header">
    <h1><i class="icon-dashboard"></i> Configuraciones</h1>
</div>

<form action="{{ path('anuncios_anuncio_backend_configuration_update') }}" method="post" class="form-horizontal" enctype="multipart/form-data" novalidate>
    <input type="hidden" name="_method" value="POST">
	{{ form_errors(form) }}
	<div class="row">
    	<div class="col-md-6 row-split">
			{% if(form.vars.value and form.vars.value.titleHomeImage) %}
	    	<a href="{{ form.vars.value.titleHomeImage|imagine_filter('anuncios_category_headline') }}" target="_blank"><img class="img-polaroid" src="{{ form.vars.value.titleHomeImage|imagine_filter('gecko_image_90x60') }}" alt="" /></a>
	    	{% endif %}
	        {{ form_row(form.titleHomeImageFile) }}
	        <br><br>
	        {% if(form.vars.value and form.vars.value.logoHome) %}
	    	<a href="{{ form.vars.value.logoHome|imagine_filter('gecko_gallery') }}" target="_blank"><img class="img-polaroid" src="{{ form.vars.value.logoHome|imagine_filter('gecko_image_90x60') }}" alt="" /></a>
	    	{% endif %}
	        {{ form_row(form.logoHomeFile) }}
	        <br><br>
	        {% if(form.vars.value and form.vars.value.favicon) %}
	    	<a href="{{ form.vars.value.favicon|imagine_filter('gecko_gallery') }}" target="_blank"><img class="img-polaroid" src="{{ form.vars.value.favicon|imagine_filter('gecko_image_90x60') }}" alt="" /></a>
	    	{% endif %}
	        {{ form_row(form.faviconFile) }}
    	</div>
        
    	<div class="col-md-6">
    		{{ form_row(form.newPassword) }}	        
		</div>
	</div>
	{{ form_rest(form) }}
	
	<br><br>
	<div class="form-actions">
    	<button type="submit" class="btn btn-primary btn-lg"><i class="icon-save"></i> {{ 'sylius.save_changes'|trans }}</button>
	</div>
</form>
{% endblock %}
